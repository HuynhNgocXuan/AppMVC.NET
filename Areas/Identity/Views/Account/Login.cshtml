@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
}

<h2>@ViewData["Title"].</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"
                class="form-horizontal" role="form">
                @Html.AntiForgeryToken()
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-4">
                    @* <label asp-for="UserNameOrEmail" class="control-label"></label> *@
                    <div class="col-md-10">
                        <input asp-for="UserNameOrEmail" placeholder="@Html.DisplayNameFor(u => u.UserNameOrEmail)"
                            class="form-control" />
                        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mt-4">
                    @* <label asp-for="Password" class="control-label"></label> *@
                    <div class="col-md-10">
                        <input asp-for="Password" placeholder="@Html.DisplayNameFor(u => u.Password)"
                            class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                    </div>
                </div>
            </form>
            <div>
                <p>
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Chưa có tài khoản? Đăng
                        ký</a>
                </p>
                <p>
                    <a asp-action="ForgotPassword">Quên mật khẩu?</a>
                </p>
            </div>
        </section>
    </div>
    @await Html.PartialAsync("_ExternalLoginPartial")
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
