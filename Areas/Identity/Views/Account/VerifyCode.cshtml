@model VerifyCodeViewModel
@{
    ViewData["Title"] = "Xác thực";
}

<h2>@ViewData["Title"].</h2>

<p>Nhập mã xác thực mà bạn nhận được qua phương thức đã chọn (ví dụ: SMS, email, ứng dụng xác thực).</p>

<form asp-controller="Account" asp-action="VerifyCode" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"
    class="form-horizontal" role="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Provider" type="hidden" />
    <input asp-for="RememberMe" type="hidden" />

    @if (!string.IsNullOrEmpty(ViewData["Status"]?.ToString()))
    {
        <h4>@ViewData["Status"]</h4>
    }

    <hr />
    <div class="form-group">
        <label asp-for="Code" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Code" class="form-control" autocomplete="off" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group my-2">
        <div class="col-md-offset-2 col-md-10">
            <div class="form-check">
                <input asp-for="RememberBrowser" class="form-check-input" />
                <label asp-for="RememberBrowser" class="form-check-label">
                    Ghi nhớ trình duyệt này cho các lần đăng nhập sau.
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-warning">Xác nhận</button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
