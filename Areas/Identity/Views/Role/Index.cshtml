    @model List<RoleModel>
    @{
        ViewData["Title"] = "Danh sách các role (vai trò)";
    }
    <h2>@ViewData["Title"]</h2>

    <partial name="_StatusMessage"></partial>


    <div class="my-4">
        <a class="btn btn-secondary me-2" asp-action="Create">Tạo role mới</a>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="User">Quản lý thành viên</a>
    </div>

    <table class="table">
        <tr>
            <th>Tên Role (vai trò)</th>
            <th>Tên Claim</th>
            <th>Tác vụ</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>
                    <p>@role.Name</p>
                </td>

                <td>
                    @foreach (var claim in @role.Claims!)
                    {
                        <small>+ @claim</small>
                        <br>
                    }
                </td>
                
                <td>
                    <a class="btn btn-success btn-sm me-2" asp-action="Edit" asp-route-roleId="@role.Id">Cập nhật</a>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal"
                        data-bs-target="#removeRoleModal-@role.Id">Xóa</button>

                    @await Html.PartialAsync("RemoveRoleModal", role)
                </td>  
            </tr>
        }
    </table>

