@model AddUserClaimModel
@{
    ViewData["Title"] = "Claim của user";
}

<h2>@ViewData["Title"] : @ViewBag.user?.UserName</h2> <!-- Sử dụng toán tử ? để tránh NullReferenceException -->

<partial name="_StatusMessage" />

<hr>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ClaimType" class="control-label"></label>
                <input asp-for="ClaimType" class="form-control" />
                <span asp-validation-for="ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaimValue" class="control-label"></label>
                <input asp-for="ClaimValue" class="form-control" />
                <span asp-validation-for="ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                @if (ViewBag.userClaim != null)
                {
                    <input type="submit" value="Cập nhật" asp-action="EditClaim" class="btn btn-primary"
                        asp-route-p="@ViewBag.currentPage" />
                    <input type="submit" value="Xóa" asp-route-claimed="@ViewBag.userClaim?.Id" class="btn btn-danger mx-2"
                        asp-action="DeleteClaim" asp-route-p="@ViewBag.currentPage" />
                }
                else
                {
                    <input type="submit" value="Tạo mới" class="btn btn-primary me-2" asp-route-p="@ViewBag.currentPage" />
                }
                <a class="btn btn-primary" asp-action="AddRole" asp-route-id="@ViewBag.user?.Id"
                    asp-route-p="@ViewBag.currentPage">Edit User Role</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}