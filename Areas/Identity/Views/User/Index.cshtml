@model UserListModel
@{
    ViewData["Title"] = "Danh sách các Tài khoản";
}
<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage"></partial>
<p>Tổng số thành viên: @Model.totalUsers</p>

<table class="table">
    <tr>
        <th>Tên user</th>
        <th>Vai trò (role)</th>
        <th>Tác vụ</th>
    </tr>
    @foreach (var user in Model.users!)
    {
        <tr>
            <td>@user.UserName</td>
            <td>
                @if (string.IsNullOrEmpty(user.RoleNames))
                {
                    <a class="text-dark" asp-action="AddRole" asp-route-id="@user.Id" asp-route-p="@Model.currentPage">
                        + Thêm roles
                    </a>
                }
                else
                {
                    <a asp-action="AddRole" asp-route-id="@user.Id" asp-route-p="@Model.currentPage">
                        @user.RoleNames
                    </a>
                }
            </td>
            <td>
                <a class="btn btn-success btn-sm" asp-action="SetPassword" asp-route-id="@user.Id"
                    asp-route-p="@ViewBag.currentPage">Đặt mật khẩu</a>
            </td>
        </tr>
    } 
</table>

@{
    var pagingModel = new PagingModel()
    {
        currentPage = Model.currentPage,
        countPages = Model.countPages,
        generateUrl = (int? p) => Url.Action("Index", new { p = p }) ?? string.Empty
    };
}
 
@await Html.PartialAsync("_PagingXTL", pagingModel)