@model webMVC.Models.Product.CategoryProduct

@{
    ViewData["Title"] = Model.Title;
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4 class="text-info">Category</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Nội dung
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
        <dt class="col-sm-2">
            Url
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary me-3" asp-action="Edit" asp-route-id="@Model.Id">Chỉnh sửa</a> 
    <a class="btn btn-primary" asp-action="Index">Danh sách chuyên mục</a>
</div>
