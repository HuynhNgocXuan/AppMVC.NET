@using Microsoft.AspNetCore.Identity
@using webMVC.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm"
        class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-controller="Manage" asp-action="Index" title="Manage">
                    Xin chào @UserManager.GetUserName(User)!
                </a>
            </li>
            <li class="nav-item ms-3">
                <button type="button" class="btn navbar-btn navbar-link btn-primary" data-bs-toggle="modal"
                    data-bs-target="#logoutModal">
                    Đăng xuất
                </button>
            </li>
        </ul>
    </form>

    @await Html.PartialAsync("_LogoutModal")
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item ">
            <a class="btn navbar-btn navbar-link btn-primary me-3" asp-area="Identity" asp-controller="Account"
                asp-action="Login">
                Đăng nhập
            </a>
        </li>
        <li class="nav-item ">
            <a class="btn navbar-btn navbar-link btn-primary me-3" asp-area="Identity" asp-controller="Account"
                asp-action="Register">
                Đăng ký
            </a>
        </li>
    </ul>
}