@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService

@{
  var result = await authorizationService.AuthorizeAsync(this.User, "ViewManageMenu");
}

@if (result.Succeeded)
{

  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      <i class="fas fa-cog"></i>
      Menu
    </button>
    <ul class="dropdown-menu">
      <li>
        <a target="_blank" class="dropdown-item" asp-action="Index" asp-controller="FileManager" asp-area="Files">
          File Explorer
        </a>
      </li>
      <li>
        <a class="dropdown-item" asp-action="Index" asp-controller="AdminPanel" asp-area="AdminPanel">
          Management
        </a>
      </li>
    </ul>
  </div>
}
