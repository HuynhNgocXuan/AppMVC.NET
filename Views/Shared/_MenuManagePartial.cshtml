@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService

@{
  var result = await authorizationService.AuthorizeAsync(this.User, "ViewManageMenu");
}

@if (result.Succeeded)
{

  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      Menu
    </button>
    <ul class="dropdown-menu">
      <li>
        <a class="dropdown-item" asp-action="Index" asp-controller="DbManage" asp-area="DataBase">
          Database
        </a>
      </li>
      <li>
        <a class="dropdown-item" asp-action="Index" asp-controller="Contact" asp-area="Contact">
          List Contacts
        </a>
      </li>
      <li>
        <a class="dropdown-item" asp-action="Index" asp-controller="Role" asp-area="Identity">
          Quản lý role (vai trò)
        </a>
      </li>
      <li>
        <a class="dropdown-item" asp-action="Index" asp-controller="User" asp-area="Identity">
          Quản lý thành viên
        </a>
      </li>
      <li>
        <a class="dropdown-item" asp-action="Index" asp-controller="Category" asp-area="Blog">
          Quản lý chuyên mục Blog
        </a>
      </li> 
      <li>
        <a class="dropdown-item" asp-action="Index" asp-controller="Post" asp-area="Blog">
          Quản lý bài viết Blog 
        </a>
      </li>
     <li>
        <a class="dropdown-item" asp-action="Index" asp-controller="CategoryProduct" asp-area="Product">
          Quản lý chuyên mục sản phẩm
        </a>
     </li>
     <li>
        <a class="dropdown-item" asp-action="Index" asp-controller="ProductManage" asp-area="Product">
          Quản lý Sản phẩm
        </a>
     </li>
      <li>
        <a target="_blank" class="dropdown-item" asp-action="Index" asp-controller="FileManager" asp-area="Files">
          Quản lý File Explorer
        </a>
      </li>
      
    </ul>
  </div>
}
