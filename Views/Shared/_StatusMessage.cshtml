@{
    var mgs = TempData["StatusMessage"] as string;
}

@if (!string.IsNullOrWhiteSpace(mgs))
{
    <div class="alert alert-@(mgs.StartsWith("Error") ? "danger" : "success") alert-dismissible fade show" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @mgs
    </div>
}
